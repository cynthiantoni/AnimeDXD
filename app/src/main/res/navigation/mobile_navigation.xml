<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.animedxd.ui.home.HomepageFragment"
        android:label="@string/title_home"
        tools:layout="@layout/homepage_activity" />

    <fragment
        android:id="@+id/navigation_list"
        android:name="com.example.animedxd.ui.listpage.ListFragment"
        android:label="@string/title_list"
        tools:layout="@layout/fragment_list_anime" />

    <fragment
        android:id="@+id/navigation_about"
        android:name="com.example.animedxd.ui.about.AboutUsFragment"
        android:label="@string/title_about"
        tools:layout="@layout/aboutus" />

    <fragment
        android:id="@+id/navigation_detail"
        android:name="com.example.animedxd.ui.detail.DetailFragment"
        android:label="Anime Detail"
        tools:layout="@layout/fragment_detail" />

</navigation>